<Window x:Class="ModernRealEstate.SimpleInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernRealEstate"
        mc:Ignorable="d"
        Title="SimpleInputWindow" WindowStartupLocation="CenterScreen" Height="200" Width="300">
    <Grid Background="#FFF0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnOK" Click="btnOK_Click" Content="Submit" Margin="10,10,10,10" Grid.Row="2"/>
        <Button x:Name="btnCancel" Click="btnCancel_Click" Grid.Column="1" Content="Cancel" Margin="10,10,10,10" Grid.Row="2"/>
        <TextBox x:Name="txtURL" GotFocus="txtURL_GotFocus" LostFocus="txtURL_LostFocus" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="1" Text="Enter URL here..." VerticalAlignment="Center" Height="20"/>
        <Label Content="Enter image URL" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="10,10,10,10" HorizontalAlignment="Center"/>

    </Grid>
</Window>
